<div class="container">

	<div class="page-header">
		<h1>Forgot your password?</h1>
	</div>
	
	<div class="row form-row">
		<div class="col-md-6">
			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>				
				<div class="form-group">
					<%= f.label :email, :class => 'col-md-4 control-label' %>
					<div class="col-md-8">
						<%= f.email_field :email,
							:autofocus        => true,
							:class            => 'form-control',
							:placeholder      => "Email",
							:'data-toggle'    => 'tooltip',
							:'data-trigger'   => 'manual',
							:'data-placement' => 'left',
							:title            => "#{devise_error_messages![:email]}"
						%>
					</div>
				</div>
				
				<div class="form-group">
					<div class="col-md-offset-4 col-md-8">
						<%= f.submit "Send me reset password instructions", :class => 'btn btn-primary btn-block btn-lg' %>
					</div>
				</div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
		
		<%= render partial: 'form_logo' %>
	</div>
	
	<hr />
</div>
