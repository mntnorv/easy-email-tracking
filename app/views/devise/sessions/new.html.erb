<% provide(:title, 'Sign in') %>

<div class="container">
	<div class="page-header">
		<h1>Sign in</h1>
	</div>
	
	<div class="row form-row">
		<div class="col-md-6">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
				<div class="form-group">
					<%= f.label :email, :class => 'col-md-4 control-label' %>
					<div class="col-md-8">
						<%= f.email_field :email,
							:class            => 'form-control',
							:placeholder      => 'Email',
							:'data-toggle'    => 'tooltip',
							:'data-trigger'   => 'manual',
							:'data-placement' => 'left',
							:title            => "#{devise_error_messages![:email]}"
						%>
					</div>
				</div>
	
				<div class="form-group">
					<%= f.label :password, :class => 'col-md-4 control-label' %>
					<div class="col-md-8">
						<%= f.password_field :password,
							:class            => 'form-control',
							:placeholder      => "Password",
							:'data-toggle'    => 'tooltip',
							:'data-trigger'   => 'manual',
							:'data-placement' => 'left',
							:title            => "#{devise_error_messages![:password]}"
						%>
					</div>
				</div>
	
				<% if devise_mapping.rememberable? -%>
					<div class="form-group">
						<div class="col-md-offset-4 col-md-8">
							<div class="checkbox">
								<%= f.label :remember_me do %>
									<%= f.check_box :remember_me %> Remember me
								<% end %>
							</div>
						</div>
					</div>
				<% end -%>
	
				<div class="form-group">
					<div class="col-md-offset-4 col-md-8">
						<%= f.submit "Sign in", :class => 'btn btn-primary btn-block btn-lg' %>
					</div>
				</div>
			<% end %>
			
			<%= render "devise/shared/links" %>
		</div>
		
		<%= render partial: 'form_logo' %>
	</div>
	
	<hr />
</div>
