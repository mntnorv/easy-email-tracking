<div class="container">

	<div class="page-header">
		<h1>Sign up</h1>
	</div>
	
	<div class="row">
		<div class="col-md-6">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
				<div class="form-group">
					<%= f.label :email, :class => 'col-md-4 control-label' %>
					<div class="col-md-8">
						<%= f.email_field :email,
							:autofocus        => true,
							:class            => 'form-control',
							:placeholder      => "Email",
							:'data-toggle'    => 'tooltip',
							:'data-trigger'   => 'manual',
							:'data-placement' => 'left',
							:title            => "#{devise_error_messages![:email]}"
						%>
					</div>
				</div>
			
				<div class="form-group">
					<%= f.label :password, :class => 'col-md-4 control-label' %>
					<div class="col-md-8">
						<%= f.password_field :password,
							:class            => 'form-control',
							:placeholder      => "Password",
							:'data-toggle'    => 'tooltip',
							:'data-trigger'   => 'manual',
							:'data-placement' => 'left',
							:title            => "#{devise_error_messages![:password]}"
						%>
					</div>
				</div>
			
				<div class="form-group">
					<%= f.label :password_confirmation, :class => 'col-md-4 control-label' %>
					<div class="col-md-8">
						<%= f.password_field :password_confirmation,
							:class            => 'form-control',
							:placeholder      => "Confirm password",
							:'data-toggle'    => 'tooltip',
							:'data-trigger'   => 'manual',
							:'data-placement' => 'left',
							:title            => "#{devise_error_messages![:password_confirmation]}"
						%>
					</div>
				</div>
			
				<div class="form-group">
					<div class="col-md-offset-4 col-md-8">
						<%= f.submit "Sign up", :class => 'btn btn-primary btn-block btn-lg' %>
					</div>
				</div>
			<% end %>
		
			<%= render "devise/shared/links" %>
		</div>
	</div>
	
	<hr />
	
</div>
