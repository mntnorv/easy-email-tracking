<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
	<h4 class="modal-title">{{ title }}</h4>
</div>

<form accept-charset="UTF-8" id="message-form" action="{{route 'new_message_path'}}" class="form-vertical" method="post">
	<div class="modal-body">
		<input class="form-control" id="recipients" name="message[recipient_list]" placeholder="Recipients" type="text" />
					
		<input class="form-control" id="subject" name="message[subject]" placeholder="Subject" type="text" />
					
		<textarea class="form-control" id="body" name="message[body]" placeholder="Body"></textarea>
	</div>
	
	<div class="modal-footer">
		<button type="submit" class="btn btn-primary">Send</button>
	</div>
</form>
